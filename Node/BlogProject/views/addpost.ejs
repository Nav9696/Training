<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>add Post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <%- include("partials/header.ejs") %>
    
    <form action="/add" method="post">
        <div class="addpost container">
            <div class="row">
                <div class="cover-image col-sm-6">

                </div>
                <% if(locals.database){
                    var id=0;
                    if(database.length!==0){
                        id=database.length;
                    }
                }%>
                
                <div class="col-sm-6 addpostform">
                    <div class="container" style="justify-content: space-evenly">
                        <h2>Add Post</h2>
                        <div class="row">
                            <div class="col-6">
                                <label for="title">Enter Title:</label>
                            </div>
                            <div class="col-6">
                                <input type="number" name="id" value="<%= id %>" hidden>
                                <input type="text" name="title" placeholder="Post title">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <label for="author">Enter Author:</label>
                            </div>
                            <div class="col-6">
                                <input type="text" name="author" placeholder="Author name" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <label for="title">Enter Post:</label>
                            </div>
                            <div class="col-6" >
                                <textarea name="post" placeholder="Enter your post here"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col" >
                                <input class="btn btn-primary"type="submit" required style="width:100%;" value="Add Post">
                            </div>
                        </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous" defer></script>
</body>
</html>